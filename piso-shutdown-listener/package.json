{
  "name": "pisonet-management-nextjs",
  "version": "2.0.0",
  "description": "PisoNet Management System with Next.js + TypeScript + MUI",
  "main": "main.js",
  "scripts": {
    "dev:next": "cd renderer && npm run dev",
    "build:next": "cd renderer && npm run build",
    "start": "npm run build:next && electron .",
    "dev": "concurrently \"npm run dev:next\" \"wait-on http://localhost:3000 && electron .\"",
    "package": "npm run build:next && electron-builder"
  },
  "dependencies": {
    "express": "^4.18.2",
    "serialport": "^12.0.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "wait-on": "^7.2.0"
  }
}
