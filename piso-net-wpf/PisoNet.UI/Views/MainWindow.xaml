<Window x:Class="PisoNet.UI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:PisoNet.UI.ViewModels"
        mc:Ignorable="d"
        Title="PisoNet Management System (WPF)" Height="768" Width="1024"
        Background="#1E1E1E">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2D2D30" Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="PisoNet Manager" Foreground="White" FontSize="24" FontWeight="Bold" />
                <TextBlock Text="{Binding TotalRevenue, StringFormat='Total Revenue: ₱{0:N2}'}" 
                           Foreground="#00FF00" FontSize="20" Margin="40,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Units}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="220" ItemHeight="220" Margin="20" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#333337" CornerRadius="8" Margin="10" Padding="15">
                            <StackPanel>
                                <TextBlock Text="{Binding Name}" Foreground="White" FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>
                                
                                <Border Background="#1E1E1E" CornerRadius="4" Margin="0,10" Padding="10">
                                    <TextBlock Text="{Binding RemainingSeconds, StringFormat='{}{0}s'}" 
                                               Foreground="#00FF00" FontSize="28" 
                                               HorizontalAlignment="Center" FontWeight="Bold"/>
                                </Border>

                                <TextBlock Text="{Binding Status}" Foreground="#AAAAAA" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding TotalRevenue, StringFormat='Revenue: ₱{0:N2}'}" 
                                           Foreground="#FFCC00" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                
                                <Button Content="Shutdown" Background="#D32F2F" Foreground="White" Margin="0,10,0,0" Padding="5"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <StatusBar Grid.Row="2" Background="#007ACC" Foreground="White">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" />
            </StatusBarItem>
             <StatusBarItem HorizontalAlignment="Right">
                <Button Content="Connect Hardware" Command="{Binding ConnectHardwareCommand}" Background="Transparent" BorderThickness="0" Foreground="White"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
